#!/bin/sh
cd $(dirname "$0")/..

if [ ! -d "env" ]; then
    virtualenv env
    source env/bin/activate
    pip3 install -r requirements.txt
else
    source env/bin/activate
fi

if [ ! -f "appdata" ]; then
    python3 setup.py
fi

if [[ $(python3 -c "from main import onceADay; onceADay()") ]]; then
    echo "You already used Minimal Twitter today. Wait until tomorrow."
else
    nohup python3 main.py > /dev/null
fi
